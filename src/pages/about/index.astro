---
import Layout from "../../layouts/BlogPost.astro";
import { LPrimaryColor } from "../../styles/theme";
// import { Content } from "../../content/about/experiences.mdx";

const heroImage = "/blog-placeholder-about.jpg";

// Work experience section
interface WorkExperienceType {
  title: string;
  duration: string;
  description: string[];
}
interface WorkExperiencesTypesArr extends Array<WorkExperienceType> {}
const WorkExperiences: WorkExperiencesTypesArr = [
  {
    title: "Quelify",
    duration: "March 2023 - present",
    description: [
      "Project manager, system analyzer, and technical officer",
      "Develop an application for business management",
      "Full stack engineer",
    ],
  },
];

// Involvements section
interface Involvement {
  title: string;
  description: string[];
}
interface InvolvementArr extends Array<Involvement> {}
const Involvements: InvolvementArr = [
  {
    title: "Krypton Technologies",
    description: [
      "Intech-21 Competition organized by UM",
      "Top 10 finalist",
      "Year 2022",
    ],
  },
  {
    title: "Artista",
    description: [
      "Piala Usahawan Digital 2022 Competition organized by UTHM & KPT",
      "Top 20 finalist",
      "Year 2022",
    ],
  },
];

// Side projects section
interface SideProject {
  title: string;
  description: string;
}
interface SideProjectArr extends Array<SideProject> {}
const SideProjects: SideProjectArr = [
  {
    title: "Cargame",
    description: "A simple terminal car game built in C++.",
  },
  {
    title: "Ncrypt",
    description:
      "Playing with own Cryptography algorithms to create message encryption.",
  },
];

interface Education {
  schoolName: string;
  duration: string;
  description: string[];
}
interface EducationArr extends Array<Education> {}
const Educations: EducationArr = [
  {
    schoolName: "International Islamic University Malaysia (IIUM)",
    duration: "10 Oct 2021",
    description: [
      "Bachelor in Computer Science",
      "Majoring in Software Engineering",
      "Speaker for web development workshop",
      "Members of Business Incubator club",
      "Committee in Valorant Competition",
      "Current CGPA: 3.56",
    ],
  },
  {
    schoolName: "Centre for Foundation Studies (IIUM)",
    duration: "6 July 2020",
    description: [
      "Members of Enginius Society (Engineering)",
      "Current CGPA: 3.91",
