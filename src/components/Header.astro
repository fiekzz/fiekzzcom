---
import HeaderLink from "./HeaderLink.astro";
// import { SITE_TITLE } from "../consts";
import Fiekzzlogo from "../../public/logo/Fiekzzlogo";
import { LPrimaryColor } from "../styles/theme";
import Icon from "astro-icon";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<header>
  <nav>
    <a href="/" class="logo-link"
      ><Fiekzzlogo Color={LPrimaryColor} Height="50" Width="50" />
    </a>
    <div class="max-md:hidden">
      <HeaderLink href="/blog" isActive={currentPath === "blog"}>
        Blog
      </HeaderLink>
      <HeaderLink href="/projects" isActive={currentPath === "projects"}>
        Projects
      </HeaderLink>
      <HeaderLink href="/about" isActive={currentPath === "about"}>
        About
      </HeaderLink>
    </div>
    <div class="max-md:hidden flex justify-center items-center">
      <a
        href="https://twitter.com/fiekzzlala22"
        target="_blank"
        class="ref-link"
      >
        <span class="sr-only">Follow Astro on Twitter</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="32"
          height="32"
          viewBox="0 0 24 24"
          ><path
            fill={LPrimaryColor}
            d="M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584l-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932ZM17.61 20.644h2.039L6.486 3.24H4.298Z"
          ></path></svg
        >
      </a>
      <a href="https://github.com/fiekzz" target="_blank">
        <span class="sr-only">Go to Astro's GitHub repo</span>
        <svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32"
          ><path
            fill={LPrimaryColor}
            d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
          ></path></svg
        >
      </a>
    </div>
    <button
      id="dropdownDefaultButton"
      data-dropdown-toggle="dropdown"
      class="text-white focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-2 py-2 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 md:hidden"
      type="button"
      ><Icon
        pack="icon-park"
        name="hamburger"
        class="h-10 w-10 flex text-center"
      /></button
    >
    <!-- Dropdown menu -->
    <div
      id="dropdown"
      class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700"
    >
      <ul
        class="py-2 text-sm text-gray-700 dark:text-gray-200"
        aria-labelledby="dropdownDefaultButton"
      >
        <li>
          <a
            href="/blog"
            class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
            >Blog</a
          >
        </li>
        <li>
          <a
            href="/projects"
            class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
            >Projects</a
          >
        </li>
        <li>
          <a
            href="https://github.com/fiekzz"
            target="_blank"
            class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
            >Github</a
          >
        </li>
        <li>
          <a
            href="https://x.com/fiekzzlala22"
            target="_blank"
            class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white"
            >X (Twitter)</a
          >
        </li>
      </ul>
    </div>
    <script src="https://unpkg.com/flowbite@1.5.1/dist/flowbite.js"></script>
  </nav>
  <style>
    header {
      margin: 0;
      background: white;
      box-shadow: 0 2px 8px rgba(var(--black), 5%);
    }
    h2 {
      margin: 0;
      font-size: 1em;
    }

    h2 a,
    h2 a.active {
      text-decoration: none;
    }
    nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 20px;
    }
    nav a {
      color: var(--black);
      /* border-bottom: 4px solid transparent; */
      text-decoration: none;
    }
    nav a.active {
      text-decoration: none;
      border-bottom-color: var(--accent);
    }
    .logo-link {
      margin: 0;
      padding: 0;
      height: 50px;
    }
    .internal-links {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      width: auto;
    }
    .ref-link {
      margin-inline: 10px;
    }
  </style>
</header>
